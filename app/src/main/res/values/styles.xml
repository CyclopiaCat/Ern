<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat">
    <item name="android:textColor">@color/very_dark</item>
    <item name="android:textSize">24sp</item>
    <item name="android:imageButtonStyle">@style/ImageButtonStyle</item>
</style>

<style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="ImageButtonStyle">
    <item name="android:scaleType">fitXY</item>
    <item name="android:elevation">3dp</item>
    <item name="android:layout_width">90dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:background">@color/light</item>
    <item name="layout_constraintDimensionRatio">w,1:1</item>
</style>

</resources>
